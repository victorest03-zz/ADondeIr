@model List<ADondeIr.Model.Ruta>
@{
    ViewBag.Title = "Index";
    ViewBag.SubTitle = "Rutas Guardadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container margin_60_35">
    <div class="row">
        <aside class="col-lg-3" id="faq_cat">
            <div class="box_style_cat" id="faq_box">
                <ul id="cat_nav">
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        var r = Model[i];
                        <li>
                            <a href="#ruta@(r.pkRuta)" class="@(i == 0 ? "active":"")"><i class="icon_document_alt"></i>@r.cRuta @(r.bActivo ? "(Activo)":"(Guardado)")</a>
                        </li>
                    }
                </ul>
            </div>
            <!--/sticky -->
        </aside>
        <!--/aside -->

        <div class="col-lg-9" id="faq">
            @foreach (var r in Model)
            {
                <h4 class="nomargin_top">@r.cRuta</h4>
                <div role="tablist" class="add_bottom_45 accordion_2" id="ruta@(r.pkRuta)">
                    @foreach (var p in r.RutaProducto)
                    {
                        <div class="card">
                            <div class="card-header" role="tab">
                                <h5 class="mb-0">
                                    <a data-toggle="collapse" href="#producto@(p.pkRutaProducto)" aria-expanded="true"><i class="indicator ti-plus"></i>@p.Producto.cProducto</a>
                                </h5>
                            </div>

                            <div id="producto@(p.pkRutaProducto)" class="collapse" role="tabpanel" data-parent="#ruta@(r.pkRuta)">
                                <div class="card-body">
                                    <p>@p.Producto.cObservacionPrincipal</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
        <!-- /col -->
    </div>
    <!-- /row -->
</div>